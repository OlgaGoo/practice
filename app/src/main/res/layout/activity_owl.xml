<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.olgagoo.debug.homework.homework_4.OwlActivity"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/owlAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/piePArt1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/fab_margin"
            android:background="@color/input_fields"
            android:hint="@string/hint_pie_part"
            android:inputType="number"/>

        <EditText
            android:id="@+id/piePArt2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/fab_margin"
            android:background="@color/input_fields"
            android:hint="@string/hint_pie_part"
            android:inputType="number"/>

        <EditText
            android:id="@+id/piePArt3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/fab_margin"
            android:background="@color/input_fields"
            android:hint="@string/hint_pie_part"
            android:inputType="number"/>

    </LinearLayout>

    <Button
        android:id="@+id/createPieChartBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/create_pie_diagram"
        android:textAlignment="center"
        style="@style/Active_Button"
        />

</LinearLayout>
